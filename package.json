{
  "name": "markreadonly",
  "displayName": "MarkReadOnly",
  "description": "Mark selected files as ReadOnly",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/markReadOnly.js",
  "keywords": ["ReadOnly"],
  "contributes": {
    "commands": [
      {
        "command": "markreadonly.setWriteable",
        "title": "set Writeable"
      },
      {
        "command": "markreadonly.setReadonly",
        "title": "set ReadOnly"
      },
      {
        "command": "markreadonly.toggleReadonly",
        "title": "toggle ReadOnly"
      }
    ],
    "configuration": {
      "title": "MarkReadOnly",
      "properties": {
        "markReadOnly.include": {
          "description": "Globs to mark as read-only",
          "type": "array",
          "default": null,
          "items": {
            "type": "string",
            "default": null
          }
        },
        "markReadOnly.exclude": {
          "description": "Globs to *not* mark as read-only",
          "type": "array",
          "default": null,
          "items": {
            "type": "string",
            "default": null
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
